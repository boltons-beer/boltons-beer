{
  "workspace": [
    "./employee-jabber",
    "./tooling"
  ],
  "tasks": {
    "generate-persona": "deno run --allow-read --allow-net --allow-env --env=./employee-jabber/.env ./tooling/generate-similar-text.ts -i ./employees.json",
    "encode-storyline": "deno run --allow-read --allow-write ./tooling/b64-encode-file.ts -i ./storyline.txt -o ./employee-jabber/.env -s B64_ENCODED_STORYLINE",
    "encode-employees": "deno run --allow-read --allow-write ./tooling/b64-encode-file.ts -i ./employees.json -o ./employee-jabber/.env -s B64_ENCODED_EMPLOYEES"
  }
}
